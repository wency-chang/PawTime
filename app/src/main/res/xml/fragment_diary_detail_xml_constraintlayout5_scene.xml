<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>

           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="30"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="30"
               android:scaleX="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="30"
               android:scaleY="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="50"
               android:alpha="0.2" />

           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="50"
               android:scaleX="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="50"
               android:scaleY="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="80"
               android:scaleX="0.3" />
           <KeyAttribute
               motion:motionTarget="@+id/detailEditButton"
               motion:framePosition="80"
               android:scaleY="0.3" />
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/detailLayoutBottom"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/detailEditButton"
            motion:layout_constraintEnd_toEndOf="@+id/detailLayoutBottom"
            android:layout_width="1dp"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" />
        <Constraint android:id="@+id/photoDotsRecycler" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/detailLayoutBottom"
            android:layout_marginEnd="12dp"
            android:id="@+id/photoDotsRecycler">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>
        <Constraint
            android:id="@+id/detailConfirmButton">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/memoRecycler">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/detailDeleteButton">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/lottieLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/memoListItemLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/memoListLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>



    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/detailLayoutBottom"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="650dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >

            <PropertySet motion:visibilityMode="ignore"/>
        </Constraint>

        <Constraint
            android:id="@+id/detailConfirmButton">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>


        <Constraint
            android:id="@+id/detailDeleteButton">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>
        <Constraint
            android:id="@+id/memoListItemLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/memoListLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>

        <Constraint
            android:id="@+id/lottieLayout">
            <PropertySet motion:visibilityMode="ignore"/>

        </Constraint>


    </ConstraintSet>

</MotionScene>