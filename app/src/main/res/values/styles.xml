<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TagChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_tag_chip_color</item>
        <item name="android:textColor">@color/text_tag_chip_color</item>
        <item name="android:textStyle">bold</item>
        <item name="maxHeight">20dp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="HomeQueryTagChipStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_tag_chip_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/gudea</item>
        <item name="chipCornerRadius">15dp</item>

    </style>
    
    <style name="datePickDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_light</item>
    </style>
        


    <style name="instruction_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gudea</item>
    </style>

    <style name="dialog_text_button">
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_calendar_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AddContentDialog">
        <item name="android:windowBackground">@color/transparent_black</item>
    </style>

    <style name="create_event_progress" parent="Widget.AppCompat.ProgressBar">
        <item name="color">@color/blue_sunday</item>
    </style>

    <style name="petProfileInputTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/blue_billow</item>
        <item name="android:background">@drawable/bg_edit_button_grey</item>
        <item name="android:backgroundTint">@color/blue_light3</item>
        <item name="android:gravity">start|center_vertical</item>

    </style>

    <style name="petProfileInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_medium</item>

    </style>

    <style name="missionCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="backgroundTint">@color/blue_light</item>
        <item name="colorAccent">@color/blue_light</item>
        <item name="colorButtonNormal">@color/blue_light2</item>
        <item name="checkedIconTint">@color/blue_light</item>
        <item name="android:numberPickerStyle">@style/NotificationPickerStyle</item>
    </style>

    <style name="NotificationPickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/blue_light</item>
        <item name="android:colorControlNormal">@color/transparent</item>
        <item name="colorAccent">@color/blue_light</item>
        <item name="android:textStyle">bold</item>

    </style>
</resources>